# MySQL 数据库配置（腾讯云 TencentDB）
MYSQL_HOST=your-tencentdb-host.mysql.tencentcdb.com
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_secure_password
MYSQL_DB=zxcard

# SQLite 配置（本地开发用）
USE_SQLITE=false
SQLITE_PATH=./zxcard.db

# Meilisearch 配置（可选，搜索引擎）
MEILI_HOST=http://127.0.0.1:7700
MEILI_API_KEY=masterKey
MEILI_INDEX=cards
MEILI_DISABLED=true

# Redis 配置（可选，任务队列）
REDIS_URL=redis://127.0.0.1:6379/0
REDIS_DISABLED=true

# 微信小程序配置
WECHAT_APPID=wx_your_appid
WECHAT_SECRET=your_secret
